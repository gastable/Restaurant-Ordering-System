@model IEnumerable<Restaurant.Models.Items>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";


}

<h3 class="alert alert-info text-center">@ViewBag.cat</h3>
<h4 class="text-primary text-center">@ViewBag.Msg</h4>


<div class="d-flex flex-row-reverse mb-3">
    @Html.ActionLink("Order Items", "Create", null, new { @class = "btn btn-primary btn-lg", onclick = "return confirm('Confirm to order these items?')" })
</div>
<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>

        <th>
            #
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="~/Menu photos/@(item.Name).jpg" width="200" />
            </td>
            <td>
                <select class="custom-select" id="@item.ItemID">
                    @for (var i = 0; i < 11; i++)
                    {
                        <option value="@i">@i</option>

                    }
                </select>

            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        var navitem = "";
        nvaitem = "#navItem"+@ViewBag.Id
        $('#navbar .nav-link').removeClass('active');
        $(nvaitem).addClass('active');

        $('.dropdown-toggle').dropdown();

        var tbid =@Convert.ToInt32(Session["TbID"]);
        let selectedValue = $("#custom-select option:selected").text();
       
    </script>
}