@model IEnumerable<Restaurant.Models.PayMethods>

@{
    ViewBag.Title = "Index";
}

<h3 class="alert alert-info text-center">Payment Methods</h3>

<div class="d-flex flex-row-reverse mb-3">
    @Html.ActionLink("Create Payment", "Create", null, new { @class = "btn btn-primary btn-lg" })
</div>
<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Method)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Method)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PaymentID }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.PaymentID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Confirm to delete the payment method of " + item.Method + " ?')" })
            </td>
            
        </tr>
    }

</table>
