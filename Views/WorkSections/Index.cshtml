@model IEnumerable<Restaurant.Models.WorkSections>

@{
    ViewBag.Title = "Index";
}

<h3 class="alert alert-info text-center">Work Sections</h3>

<div class="d-flex flex-row-reverse mb-3">
    @Html.ActionLink("Create Section", "Create", null, new { @class = "btn btn-primary btn-lg" })
</div>
<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Actions
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Section Screen", "Details","WorkSections", new { id = item.SecID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Edit", "Edit", new { id = item.SecID }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.SecID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Confirm to delete " + item.Name + " section?')" })
            </td>
        </tr>
    }

</table>
