@model IEnumerable<Restaurant.Models.Tables>

@{
    ViewBag.Title = "Index";
}

<h3 class="alert alert-info text-center">Table List</h3>

<div class="d-flex flex-row-reverse mb-3">
    @Html.ActionLink("Create Table", "Create", null, new { @class = "btn btn-primary btn-lg" })
</div>
<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TbCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TbCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.ActionLink("Login", "Login","TableLogin", new { tbcode = @item.TbCode, pw = @item.Password }, new { @class = "btn btn-outline-info" })
                @Html.ActionLink("Edit", "Edit", new { id = item.TbID }, new { @class = "btn btn-outline-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.TbID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Confirm to delete the table No." + item.TbID + " ?')" })
            </td>
        </tr>
    }

</table>
