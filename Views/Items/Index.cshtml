@model IEnumerable<Restaurant.Models.Items>

@{
    ViewBag.Title = "Index";
}

<h3 class="alert alert-info text-center">Menu Items</h3>

<div class="d-flex flex-row-reverse mb-3">
    @Html.ActionLink("Create Item", "Create", null,new {@class = "btn btn-primary btn-lg"})
</div>
<table class="table table-striped table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DishCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categories.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WorkSections.Name)
        </th>
        <th>
            Actions
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DishCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img src="~/Menu photos/@(item.Name).jpg" width="200" />
@*            @Html.DisplayFor(modelItem => item.Photo)
*@        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categories.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WorkSections.Name)
        </td>
        <td >
                @Html.ActionLink("Edit", "Edit", new { id = item.ItemID }, new { @class = "btn btn-outline-success mb-2" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ItemID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Confirm to delete the item of " + item.Name + " ?')" })
        </td>
    </tr>
}

</table>
